@model Cart
@{
    ViewBag.Title = "CartPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Kitap İsmi</th>
            <th>Kitap Fiyatı</th>
            <th>Adedi</th>
            <th>Ara Fiyat</th>
            <th>
                @Html.ActionLink("Alışverişe Devam Et", "ShoppingList")
            </th>
        </tr>
    </thead>

    @{
        decimal? toplamTutar = 0;
    }

    <tbody>
        @foreach (CartItem item in Model.Sepetim)
        {
            toplamTutar += item.SubTotal;

            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Amount</td>
                <td>@item.SubTotal</td>
                <td>@Html.ActionLink("Sepetten Cıkar", "RemoveFromCart", new { id = item.ID })</td>
            </tr>
        }
    </tbody>

</table>

<div>
    Ödemeniz gereken toplam tutar => @toplamTutar
</div>

<div>
    @Html.ActionLink("Sipariş Ver", "SiparisVer", null, new { @class = "btn btn-primary" })
</div>