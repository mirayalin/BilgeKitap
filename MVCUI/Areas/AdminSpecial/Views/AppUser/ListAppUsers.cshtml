            @Html.Grid(Model).Columns(c =>
       {
           c.Add().Encoded(false).Sanitized(false).Titled("Kullanıcı Resmi").RenderValueAs(ct =>@<img src="@ct.ImagePath" style="width:50px;height:100px" />);

                 c.Add(ct => ct.Name)
       .Titled("Adı");

                 c.Add(ct => ct.SPName)
       .Titled("Soyadı");

                 c.Add(ct => ct.BirthDate)
       .Titled("Kullanıcı Doğum Tarihi");

                 c.Add(ct => ct.UserName)
.Titled("Kullanıcı İsmi");

                 c.Add(ct => ct.Email)
.Titled("Email");

                 c.Add().Encoded(false).Sanitized(false).Titled("Kullanıcı Sil").RenderValueAs(ct => Html.ActionLink("Kullanıcıyı Sil", "DeleteAppUser", new { id = ct.ID }, null).ToHtmlString());

             }).WithPaging(5).Sortable(true)

            @{
                AppUser gelen = Session["admin"] as AppUser;

                @Html.ActionLink("Kullanıcı Ayarları", "AppUserOptions", "AppUser", new { area = "AdminSpecial", id = gelen.ID }, new { @class = "btn btn-primary" });
