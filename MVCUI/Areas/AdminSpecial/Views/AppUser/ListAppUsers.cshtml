@using GridMvc.Html
@model List<AppUser>
@{
    ViewBag.Title = "ListAppUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Deneme{
    @Html.ActionLink("Kullanıcı Ekle", "AddAppUser", "AppUser", new { area = "AdminSpecial" }, new { @class = "list-group-item" })

    @Html.ActionLink("Kategori Listele", "CategoryList", "Category", new { area = "AdminSpecial" }, new { @class = "list-group-item" })

    @Html.ActionLink("Kitap Listele", "BookList", "Book", new { area = "AdminSpecial" }, new { @class = "list-group-item" })

    @Html.ActionLink("Yazarları Listele", "AuthorList", "Author", new { area = "AdminSpecial" }, new { @class = "list-group-item" })

    @Html.ActionLink("Çıkış Yap", "LogOut", "AppUser", new { area = "AdminSpecial" }, new { @class = "btn btn-success" })


}

<h2>ListAppUsers</h2>


